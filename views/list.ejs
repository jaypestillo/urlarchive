<div class="fixedSearchBar">
    <h3>Archive</h3>
    <input type="text" class="form-control search" id="search" placeholder="Type to search">
</div>
<div class="scrollable">
    <table class="table table-hover table-sm" id="dataTable">
        <thead class="thead">
            <tr>
                <th width="320px" align="center" >title</th>
                <th width="320px" align="center" >category</th>
                <th width="180px" align="center" >date</th>
                <th width="180px" align="center" >URL</th>
                <th width="100px" ></th>
            </tr>
        </thead>
        <tbody>
            <% entries.forEach(function(entry) { %>
                <tr>
                    <td width="320px"><div><strong><%= entry.title %></strong></div></td>
                    <td width="320px"><div><%= entry.category %></div></td>
                    <td width="180px"><div><%= entry.date %></div></td>
                    <td width="180px"><div><em><a href="<%= entry.url %>" target="_blank">URL Link</a></em></div></td>
                    <td width="100px"><div><a href="/entries/edit/<%= entry.id %>" class="btn btn-secondary">Update</a></div></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
