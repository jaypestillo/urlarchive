<!-- add.ejs file | A form that is used to add entries to the mongodb database. -->
<h1 class="display-4">Add URL</h1>
<form data-toggle="validator" method="post" action="/entries/create">
  <div class="form-group">
    <label for="title">title</label>
    <input type="text" name="title" placeholder="Add title" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="category">category</label>
    <input type="text" name="category" placeholder="Add category" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="date">date</label>
    <input type="text" name="date" placeholder="Add date" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="url">url</label>
    <input type="text" name="url" placeholder="Add url" class="form-control" required>
  </div>
  <input type="button" value="Cancel" class="btn btn-secondary" onclick="window.location.href='/entries/list'">
  <input type="submit" value="Add" class="btn btn-secondary">
</form>
