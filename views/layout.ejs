<!DOCTYPE html>
<html>
  <head>
    <title><%=typeof title == 'undefined' ? 'URL Archive' : title%></title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/importer.css">
    <link rel="stylesheet" href="/styles/style.css">
    <!--STYLES END-->
  </head>

  <body>


    <nav class="navbar navbar-inverse navbar-expand-sm navbar-dark bg-dark mb-4">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">URL Archive</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% if (session.authenticated) { %>
              <li class="active"><a href="/entries/list/<%= session.User.id %>"><%= session.User.email %> </a> </li>
            <% } %>
          </ul>
          <div class="ml-auto">
            <% if (session.authenticated) { %>
              <a class="btn btn-secondary navbar-btn navbar-right" href="/session/destroy">sign-out</a>
            <% } %>
          </div>
          <% if (!session.authenticated) { %>
          <form class="navbar-form ml-auto form-inline" action="/session/create">
            <div class="form-group" style="padding-right: 5px;">
              <input type="text" placeholder="Email" name="email" class="form-control">
            </div>
            <div class="form-group" style="padding-right: 5px;">
              <input type="password" placeholder="Password" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-secondary">Sign in</button>
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
          </form>
          <% } %>
        </div>
      </div>
    </nav>



   <!-- <nav class="navbar navbar-inverse navbar-expand-sm navbar-dark bg-dark mb-4">
      <a class="navbar-brand" href="/">URL Archive</a>

      <div class="container-fluid" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/entries/list">Archive</a>
          </li>
        </ul>
      </div>
    </nav> -->

    <div class="container">
      <%- body %>
    </div>

    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/search.js"></script>
    <!--SCRIPTS END-->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

  </body>
</html>
